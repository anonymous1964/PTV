#include<reg52.h>
#define uchar unsigned char
#define uint unsigned int 
sbit juli=P1^0;
sbit led1g=P1^1;		   //乘务员1绿
sbit led1r=P1^2;		   //乘务员1红
sbit led2g=P1^3;			//乘务员2绿
sbit led2r=P1^4;			//乘务员2红
sbit led3g=P2^4;			//乘务员3绿
sbit led3r=P2^5;			 //乘务员3红 
sbit led1y=P2^6;			 //乘客1黄
sbit led2y=P2^7;			 //乘客2黄
sbit fengmingqi1=P2^1;		  //乘客1蜂鸣器
sbit fengmingqi2=P2^2;		   //乘客2蜂鸣器
sbit fengmingqi3=P2^3;		   //乘客3蜂鸣器
sbit chengke1=P1^5;				//乘客1来没来
sbit chengke2=P1^6;			    //乘客2来没来
sbit chengke3=P1^7;			    //乘客3来没来
sbit guan=P2^0;				    //站点数显示
uchar code table[]={
0xc0,0xf9,0xa4,0xb0,
0x99,0x92,0x82,0xf8,
0x80,0x90,0x88,0x83,
0xc6,0xa1,0x86,0x81
};

uint num=0;						  
uchar numt0;
uchar numt01=0;
uchar numt1;
uchar numt11=0;
uchar distance1;					//乘客1设置的提醒距离
uchar distance2;					//乘客2设置的提醒距离
uchar distance3;				   //乘客3设置的提醒 距离
uchar final1;					   //计算所得乘客1该提醒地点
uchar final2;					   //计算所得乘客2该提醒地点
uchar final3;					   //计算所得乘客3该提醒地点
void delayms(uchar xms)
{
	uchar i,j;
	for(i=xms;i>0;i--)
		for(j=110;j>0;j--);
}
void afengmingqi1()		   //蜂鸣器1响
{
	fengmingqi1=1;
	delayms(500);
	fengmingqi1=0;
}
void afengmingqi2()		    //蜂鸣器2响
{
	fengmingqi2=1;
	delayms(500);
	fengmingqi2=0;
}
void bfengmingqi1()		   //蜂鸣器1灭
{
	fengmingqi1=1;
	
}
void bfengmingqi2()		   //蜂鸣器2灭
{
	fengmingqi2=1;
}
void init()
{
	TMOD=0x11;
	TH0=(65536-45872)/256;
	TL0=(65536-45872)%256;
	TH1=(65536-45872)/256;
	TL1=(65536-45872)%256;
	EA=1;
	ET0=1;
	ET1=1;
}						
void cejumokuai()				 //小车行驶到哪个车站 
{
	if(juli==1)
		{   
			num++;
			
		}	
}
void daozhanjisuan()		//乘客提醒地点计算
{
	 if(chengke1==1)
	 {
	 	final1=distance1;
	 }
	 else
	 {
	 	final1=-1;
		led1g=0;
	 }
	 if(chengke2==1)
	 {
	 	final2=3+distance2;
	 }
	 else
	 {
	 	final2=-1;
		led2g=0;
	 }
	 if(chengke3==1)
	 {
	 	final3=distance3;
	 }
	 else
	 {
	 	final3=-1;
		led3g=0;
	 }
	
} 
 void daozhantixing()			   //乘客和乘务员提醒
{

	guan=0;
	P0=table[num];
	delayms(500);
 }
void daozhantixing2()			   //乘客和乘务员提醒
{
   if(final1==num&&(num!=0)&&(chengke1==1))
   {	
	if(numt01==0)
	{
	
	 led1r=0;
	 led1g=0;
	 afengmingqi1();
	 led1y=0;

	 }
	 if(distance1!=0)
	 {
	TR0=1;
	 if(numt01==1)
	 {
	 	led1g=1;
	 }
	 }
   }
   if(final2==num&&(num!=0)&&(chengke2==1))
   {
   if(numt11==0)
	{	
	 led2r=0;
	 led2g=0;
	 afengmingqi2();
	 led2y=0;
	 }
	 if(distance3!=0)
	 {
	TR1=1;
	 	if(numt11==1)
	 	{
	 	led2g=1;
	
	 	}
	 }
	}
}

uchar matrixkeyscan()		       //键盘输入
{
	uchar temp;
	P3=0xfe;
	temp=P3;
	temp=temp&0xf0;
	if(temp!=0xf0)
	{
		delayms(10);
		temp=P3;
		temp=temp&0xf0;
		if(temp!=0xf0)
		{
			temp=P3;
			switch(temp)
			{
				case 0xee:distance1=1;break;
				case 0xde:distance1=2;break;
				case 0xbe:distance1=3;break;
				case 0x7e:distance1=0;led1y=1;final1=0;led1r=1;led1g=1;bfengmingqi1();break;
				
			}
			while(temp!=0xf0)
			{
				temp=P3;
				temp=temp&0xf0;
			}
			return distance1;
		}
	}
	P3=0xfd;
	temp=P3;
	temp=temp&0xf0;
	if(temp!=0xf0)
	{
		delayms(10);
		temp=P3;
		temp=temp&0xf0;
		if(temp!=0xf0)
		{
			temp=P3;
			switch(temp)
			{
				case 0xed:distance2=1;break;
				case 0xdd:distance2=2;break;
				case 0xbd:distance2=3;break;
				case 0x7d:distance2=0;led2y=1;final2=0;led2r=1;led2g=1;bfengmingqi2();break;
				
			}
			while(temp!=0xf0)
			{
				temp=P3;
				temp=temp&0xf0;
			}
			return distance2;
		}
	}
	P3=0xfb;
	temp=P3;
	temp=temp&0xf0;
	if(temp!=0xf0)
	{
		delayms(10);
		temp=P3;
		temp=temp&0xf0;
		if(temp!=0xf0)
		{
			temp=P3;
			switch(temp)
			{
				case 0xeb:distance3=1;break;
				case 0xdb:distance3=2;break;
				case 0xbb:distance3=3;break;
				case 0x7b:distance3=0;led3g=1;break;
			
			}
			while(temp!=0xf0)
			{
				temp=P3;
				temp=temp&0xf0;
			}
			return distance3;
			 
		}
	}


}

void main()
{
	while(1)
	{

	init();
	cejumokuai();
	delayms(1000);
	matrixkeyscan();
	daozhanjisuan();
	daozhantixing();
	daozhantixing2();
	}
}
void T0_time() interrupt 1
{
	TH0=(65536-45872)/256;
	TL0=(65536-45872)%256;
	numt0++;
	if(numt0==60)
	{
		numt0=0;
		numt01=1;
		
	}
}
void T1_time() interrupt 3
{
	TH1=(65536-45872)/256;
	TL1=(65536-45872)%256;
	numt1++;
	if(numt1==60)
	{
		numt1=0;
		numt11=1; 
	}
}
